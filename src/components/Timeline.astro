---
const timelineItems = [
    { date: "~13-14b years ago", description: "The Big Bang", info: "The universe began with a massive expansion." },
    { date: "2005", description: "Event 2 description", info: "Additional information about event 2." },
    { date: "2010", description: "Event 3 description", info: "Additional information about event 3." },
    { date: "2015", description: "Event 4 description", info: "Additional information about event 4." },
    { date: "2020", description: "Event 5 description", info: "Additional information about event 5." },
];
---

<div class="flex flex-col items-center p-8">
    {timelineItems.map(item => (
        <div class="flex items-start mb-8 relative pl-8 w-full">
            <div class="font-bold mb-2 bg-indigo-500 text-white py-2 px-4 rounded-full flex-shrink-0">{item.date}</div>
            <div class="ml-4 bg-white p-4 rounded-lg shadow-md max-w-xl w-full">
                <div class="font-bold text-indigo-900">{item.description}</div>
                <div class="mt-2 text-gray-700">{item.info}</div>
            </div>
            <div class="absolute left-0 top-0 bottom-0 w-1 bg-indigo-500"></div>
        </div>
    ))}
</div>