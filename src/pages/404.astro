---
import { AlertCircle } from 'lucide-astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" description="This page is an invalid page. Try something else, perhaps?">
    <main class="text-center max-w-2xl mt-8">
        <AlertCircle class="w-16 h-16 text-red-500 mx-auto mb-4" />
        <h1 class="text-6xl font-bold mb-4">404</h1>
        <p class="text-2xl mb-4">Page Not Found</p>
        <p class="mb-4">
            Sorry, the page you are looking for does not exist. You can always go back to the <a href="/" class="underline text-indigo-200">homepage</a>.
        </p>
    </main>
</BaseLayout>