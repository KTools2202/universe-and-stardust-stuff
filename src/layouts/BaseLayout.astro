---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import EmbedTags from "../components/EmbedTags.astro";

interface Props {
    title: string;
    description: string;
    hfit: string;
}

const { title, description, hfit } = Astro.props;

const meta = {
    title: `${title} | Humans and Stardust`,
    description: `${description}`
}

const divclass = `flex flex-col items-center justify-center text-white bg-black bg-opacity-50 ${hfit}`
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <EmbedTags {...meta} />
  <title>{title} | Humans and Stardust</title>
</head>
<body class="bg-cover bg-center h-screen" style="background-image: url('/background.jpg');">
  <Header />
  <div class={divclass}>
    <slot />
  </div>
  <Footer />
</body>
</html>